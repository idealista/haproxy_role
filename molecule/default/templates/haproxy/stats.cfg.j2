listen  {{ haproxy_stats_name }}
        bind {{ haproxy_stats_listen_interface }}:{{ haproxy_stats_listen_port }}
        mode http
        option httplog
        stats enable
        stats show-legends
        stats uri {{ haproxy_stats_uri }}
        stats realm Haproxy\ Statistics
        stats auth {{ haproxy_stats_user }}:{{ haproxy_stats_password }}
        stats admin if TRUE
        stats refresh 5s

